# Basic appearance
font-family = "Agave Nerd Font Regular"
font-size = 11
window-padding-x = 10
window-padding-y = 10
background-opacity = 0.80
window-theme = "dark"

# Colors - Material Theme Ocean
#background = #0F111A
#foreground = #8F93A2
#cursor-color = #FFCC00

# Selection
selection-background = #717CB4
selection-foreground = #FFFFFF

# Performance
cursor-blink-rate = 750
cursor-style = "block"
mouse-hide-while-typing = true

# Window
window-save-state = true
window-width = 140
window-height = 40
macos-option-as-alt = true

# Scrollback
scrollback = 10000
scroll-on-output = false

# Shell integration
shell-integration = true
shell-integration-features = "prompt-detection"

# Key bindings
keybind = cmd+c=copy
keybind = cmd+v=paste
keybind = cmd+n=new_window
keybind = cmd+t=new_tab
keybind = cmd+w=close_tab
keybind = cmd+shift+w=close_window
keybind = cmd+shift+]="next_tab"
keybind = cmd+shift+[="previous_tab"

# Tab bar
tab-bar-style = "fancy"

# Theme
theme = dark:chalk,light:chalkboard
